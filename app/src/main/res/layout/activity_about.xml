<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#bbdefb"
    tools:context=".About">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_item_photo"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baneronepiece"/>


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="157dp"
                android:src="@drawable/jayaprofil"
                app:civ_border_color="#b0bec5"
                app:civ_border_width="10dp" />

            <TextView
                android:id="@+id/rv_namaku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="MOCH. ARISANDI JAYANTO"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Halo! Selamat datang di aplikasiku.\n Saya berasal dari Universitas Jember, program studi Informatika.\n Sekarang saya sedang menempuh Kampus Merdeka Studi Indepent di Dicoding \nPengembang Aplikasi Android dan Multi-Platform"
                android:textAlignment="center"
                android:paddingBottom="5dp"
                android:textSize="10dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="293dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/mail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="100dp"
                        android:text="@string/mail"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="10sp"
                        android:layout_marginStart="5dp"/>


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/github"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/github"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="10sp"
                        android:layout_marginStart="100dp"/>

                    <TextView
                        android:id="@+id/git"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/git"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="10sp"/>

                </TableRow>

            </TableLayout>


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>